@using Tucson.Palermo.DTO
@model ReservaCumpleañero
@{
    ViewData["Title"] = "Crear Reserva cumpleaños";
}

<h2>Crear Reserva cumpleaños</h2>

<form asp-action="CrearCumpleañosDB" method="post">

    <div>
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div>
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <label>Horario permitido entre 00:00 y 23:00</label>

    <div class="form-group">
        <label>Día</label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Hora de Inicio</label>
        <select asp-for="HoraInicio" asp-items="ViewBag.Horas" class="form-control"></select>
        <span asp-validation-for="HoraInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Hora de Fin</label>
        <select asp-for="HoraFin" asp-items="ViewBag.Horas" class="form-control"></select>
        <span asp-validation-for="HoraFin" class="text-danger"></span>
    </div>

    <div>
        <label>Cantidad de Personas</label>
        <input asp-for="CantidadPersonas" class="form-control" />
        <span asp-validation-for="CantidadPersonas" class="text-danger"></span>
    </div>

    <div>
        <label>Edad del cumpleañero</label>
        <input asp-for="EdadCumpleañero" class="form-control" />
        <span asp-validation-for="EdadCumpleañero" class="text-danger"></span>
    </div>

    <div>
        <label>Requiere torta</label>
        <input asp-for="RequiereTorta" type="checkbox" class="form-check-input" />
        <span asp-validation-for="RequiereTorta" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Reservar</button>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
